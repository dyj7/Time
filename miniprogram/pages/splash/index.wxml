<page-meta>
  <navigation-bar title="登录" front-color="#fff" background-color="#7a88ff" />
</page-meta>
<view class="wrapper">
  <!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
  <open-data type="userAvatarUrl"></open-data>
  <open-data type="userNickName"></open-data>
  <view class="name">
    <label>请输入账号：</label>
    <input type="text" placeholder="你的手机号" value="{{ name }}" />
  </view>
  <view class="password">
    <label>请输入密码：</label>
    <input type="text" placeholder="你的完整阴历生日" value="{{ password }}" />
  </view>
  <button
    wx:if="{{canIUse}}"
    open-type="getUserInfo"
    bindgetuserinfo="bindGetUserInfo"
  >
    授权登录
  </button>
</view>
